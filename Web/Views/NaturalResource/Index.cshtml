@using Data
@using Data.Models
@model IList<NaturalResource>
@{
    ViewData["Title"] = "Natural Resources";
}

<div class="container mt-1">
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Delete <span id="deleteNameTitle"></span>?</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-danger fw-bold">
                    Are you sure you want to delete <span id="deleteName"></span> forever? This action is permanent. There's no going back.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <form method="post" id="deleteForm">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Edit <span id="editNameTitle"></span>?</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" id="editForm">
                    <div class="modal-body fw-bold">
                        <label for="editName" class="form-label">Name</label>
                        <input type="text" id="editName" name="Name" minlength="1" maxlength="@DataConfig.NameLength" class="form-control" autocomplete="off">

                        <label for="editDescription" class="form-label">Description</label>
                        <input type="text" id="editDescription" name="Description" minlength="1" maxlength="@DataConfig.DescriptionLength" class="form-control" autocomplete="off">

                        <input type="hidden" id="editId" name="Id" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @foreach (var resource in Model)
    {
        <div class="row">
            <div class="text-bg-light border rounded fw-medium fs-6 my-2 p-2 col">
                <div class="row">
                    <div class="col-10">
                        <span class="badge custom-badge">@resource.Name</span> - @resource.Description
                    </div>
                    <div class="col-1">
                        <button type="button" onclick="showEditModal('@resource.Id', '@resource.Name', '@resource.Description')"
                                data-bs-toggle="modal" data-bs-target="#editModal"
                                class="btn btn-link p-0 material-symbols-outlined float-end text-decoration-none">brush</button>
                    </div>
                    <div class="col-1">
                        <button type="button" onclick="showDeleteModal('@resource.Id', '@resource.Name')"
                                data-bs-toggle="modal" data-bs-target="#deleteModal"
                                class="btn btn-link p-0 material-symbols-outlined float-end text-decoration-none">delete_forever</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function showDeleteModal(id, name) {
        document.getElementById('deleteNameTitle').textContent = name;
        document.getElementById('deleteName').textContent = name;
        document.getElementById('deleteForm').action = '/NaturalResource/Delete/' + id;
    }

    function showEditModal(id, name, description) {
        document.getElementById('editNameTitle').textContent = name;
        document.getElementById('editName').value = name;
        document.getElementById('editDescription').value = description;
        document.getElementById('editId').value = id;
        document.getElementById('editForm').action = '/NaturalResource/Edit/';
    }
</script>
